      "item": [
        {
          "name": "Upload Resume & Get Recommendations",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Select a PDF resume file"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/upload-resume",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["upload-resume"]
            },
            "description": "Upload resume PDF and get job recommendations with skills extraction"
          }
        },
        {
          "name": "Analyze Resume (Skills Only)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Select a PDF resume file"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/analyze-resume",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["analyze-resume"]
            },
            "description": "Extract skills from resume without job matching"
          }
        },
        {
          "name": "Get Recommendations with Custom Top N",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "",
                  "description": "Select a PDF resume file"
                },
                {
                  "key": "top_n",
                  "value": "10",
                  "type": "text",
                  "description": "Number of recommendations to return"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:8000/get-recommendations?top_n=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["get-recommendations"],
              "query": [
                {
                  "key": "top_n",
                  "value": "10"
                }
              ]
            },
            "description": "Get job recommendations with custom number of results"
          }
        }
      ]
    },
    {
      "name": "Job Scraping (NEW!)",
      "item": [
        {
          "name": "Scrape Jobs from All APIs (Python/USA)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/scrape-jobs?keyword=python&location=USA",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["scrape-jobs"],
              "query": [
                {
                  "key": "keyword",
                  "value": "python",
                  "description": "Job search keyword"
                },
                {
                  "key": "location",
