    {
      "name": "Job Management",
      "item": [
        {
          "name": "List All Jobs (From DB)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/jobs?skip=0&limit=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["jobs"],
              "query": [
                {
                  "key": "skip",
                  "value": "0",
